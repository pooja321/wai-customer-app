<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    tools:context="com.waiapp.Profile.ChangeEmailFragment">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_changeEmail_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/textinputlayout_margin">

        <EditText
            android:id="@+id/fragment_changeemail_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter New Email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/edit_text_padding"
            android:textColor="@color/black"
            android:textColorHint="@color/colordarkgrey"
            android:textSize="@dimen/text_size_normal" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/button_changeemail_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:background="@color/colorAccent"/>

</LinearLayout>
