<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/feed_item_margin"
        android:background="@drawable/bg_rectangle_solid_white_corner"
        android:orientation="vertical"
        android:paddingBottom="@dimen/feed_item_padding_top_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rectangle_solid_black_top_corner"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/order_item_iv_ordertype"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/bg_rectangle_solid_yellow"
                android:src="@drawable/ic_local_dining_black_24dp" />

            <TextView
                android:id="@+id/order_item_tv_orderid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="O16171818"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/text_size_medium" />

            <!--<TextView-->
                <!--android:id="@+id/order_item_tv_current_order_ind"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/bg_oval_stroke_white"-->
                <!--android:padding="8dp"-->
                <!--android:text="@string/current_order"-->
                <!--android:textColor="@color/colorwhite"-->
                <!--android:textSize="@dimen/text_size_normal"-->
                <!--android:visibility="gone"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_item_tv_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="OCT 13 "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/order_item_tv_orderamount"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="250.00"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/order_item_tv_orderstatus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="Completed"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>